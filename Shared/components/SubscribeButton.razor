<Button class="f-flex align-items-center" @onclick="OnSubscribe">
    @if (IsSubscribedLoading) {
        <Loader />
    } else {
        @if (IsSubscribed) {
            <span class="me-2">Subscribed (@SubscribersCount)</span>
            <i class="oi oi-check"></i>
        } else {
            <span class="me-2">Not subscribing (@SubscribersCount)</span>
            <i class="oi oi-circle-x"></i>
        }
    }
</Button>

@code {
    [Parameter]
    public bool IsSubscribed { get; set; }

    [Parameter]
    public bool IsSubscribedLoading { get; set; }

    [Parameter]
    public int SubscribersCount { get; set; }

    [Parameter]
    public EventCallback OnSubscribe { get; set; }

    private async Task Subscribe()
    {
        await OnSubscribe.InvokeAsync();
    }
}