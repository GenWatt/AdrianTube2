<div @onclick="DecreaseLike" role="button" class="cursor-pointer">
    <i class="oi oi-thumb-down text-danger"></i>
    <span class="ms-1">@Count</span>
</div>

@code {
    [Parameter]
    public int Count { get; set; }

    [Parameter]
    public EventCallback OnDisLike { get; set; }

    public void DecreaseLike()
    {
        OnDisLike.InvokeAsync();
    }
}