@using AdrianTube2.Models.Movie

@if (Movie != null) {
    <li>
        <div style="height: 100%;" class="card glass-card position-static" >
            <a title="@Movie.Title" href="/movie/@Movie.Id">
                <img src="@Movie.Thumbnail" style="max-height: 200px;" class="card-img-top" alt="Thumbnail">
            </a>
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between">
                    <a title="@Movie.Title" class=" text-primary text-decoration-none" href="/movie/@Movie.Id">
                        <h5 class="card-title">@Movie.Title.Truncate(30)</h5>
                    </a>
                    <MovieMenu Movie="@Movie" />
                </div>
                <a class="text-primary text-decoration-none flex-grow-1 d-flex flex-column justify-content-between" href="/movie/@Movie.Id">
                    <p class="card-text">@Movie.Description.Truncate(60)</p>
                    <span class="text-muted text-end d-block w-100">@Movie.CreatedAt.GetTimeFromNow()</span>
                </a>
            </div>
        </div>
    </li>
}

@code {
    [Parameter] public Movie Movie { get; set; }
}