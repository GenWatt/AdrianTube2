@using AdrianTube2.Models.Movie

@if (Movie != null) {
    <li>
        <div style="height: 100%;" class="card glass-card position-static" >
            <a title="@Movie.Title" href="/movies/@Movie.Id">
                <img src="@Movie.Thumbnail" style="max-height: 200px;" class="card-img-top" alt="Thumbnail">
            </a>
            <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between">
                    <a title="@Movie.Title" class=" text-primary text-decoration-none me-2" href="/movies/@Movie.Id">
                        <h5 class="text-light">@Movie.Title.Truncate(30)</h5>
                    </a>
                    <MovieMenu Movie="@Movie" />
                </div>
                <a class="text-primary text-decoration-none flex-grow-1 d-flex flex-column justify-content-between" href="/movies/@Movie.Id">
                    <p class="text-light bg-secondary p-1 rounded">@Movie.Description.Truncate(60)</p>
                    <div style="font-size: 12px;" class="d-flex gap-2 mt-3 align-items-center">
                        <img class="avatar" src="@Movie.User.ProfilePicture" alt="@Movie.User.Username">
                        <h3 class="text-light fs-6 text-muted">By - @Movie.User.Username</h3>
                    </div>
                    <span class="hr w-100"></span>
                    <span class="text-muted text-end d-block w-100">@Movie.CreatedAt.GetTimeFromNow()</span>
                </a>
            </div>
        </div>
    </li>
}

@code {
    [Parameter] public Movie Movie { get; set; }
}